[libdefaults]
default_realm = {{ deployment.krb5.realm | upper }}
dns_lookup_kdc = false
dns_lookup_realm = false
ticket_lifetime = 1d
renew_lifetime = 7d
forwardable = true
default_tgs_enctypes = {{ deployment.krb5.enc_types }}
default_tkt_enctypes = {{ deployment.krb5.enc_types }}
permitted_enctypes = {{ deployment.krb5.enc_types }}
udp_preference_limit = 1
kdc_timeout = 3000

[realms]
{{ deployment.krb5.realm | upper }} = {
  kdc = {{ deployment.krb5.kdc_host }}
  admin_server = {{ deployment.krb5.kdc_host }}
}

[domain_realm]
.{{ ansible_domain }} = {{ deployment.krb5.realm | upper }}
{{ ansible_domain }} = {{ deployment.krb5.realm | upper }}
